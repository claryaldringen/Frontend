<ul>
{foreach $menu['items'] as $menuItem}
	{if $menuItem['visibility'] == 'visible'}
		<li>
		{if !empty($absolute)}
			{var $parts = explode('/', $url)}
			{php $parts[count($parts)-1] = $menuItem['url'] ?}
			{var $link = implode('/', $parts)}
		{else}
			{var $link = $url . '/' . $menuItem['url'] }
		{/if}
		{if $menuItem['id'] == $menuId}
			<a href="{$link}.html" class="active">{$menuItem['text']}</a>
		{else}
			<a href="{$link}.html">{$menuItem['text']}</a>
		{/if}
		</li>
	{/if}
{/foreach}
</ul>